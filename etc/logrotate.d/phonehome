# LogRotate configuration for PhoneHome server
/var/log/phonehome/*.log {
    daily
    rotate 30
    compress
    delaycompress
    notifempty
    create 640 phonehome phonehome
    missingok
    dateext
    sharedscripts
    postrotate
        /bin/systemctl reload phonehome.service > /dev/null 2>&1 || true
    endscript
}
